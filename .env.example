# Seichijunrei Bot Environment Variables
# Copy this file to .env and fill in your actual values

# API Keys

# Google Maps API Key - REQUIRED for route optimization
# The route planning feature requires Google Maps Directions API.
# To obtain your API key:
# 1. Go to https://console.cloud.google.com/google/maps-apis/credentials
# 2. Create a new API key (or use an existing one)
# 3. Enable "Directions API" for your Google Cloud project
# 4. (Recommended) Restrict the key to only Directions API for security
# 5. Copy the key and paste it below
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Gemini API Key (legacy, optional - ADK now uses Google Cloud credentials)
GEMINI_API_KEY=your_gemini_api_key_here
WEATHER_API_KEY=your_weather_api_key_here

# API Endpoints
ANITABI_API_URL=https://api.anitabi.cn/bangumi
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GOOGLE_CLOUD_PROJECT=your-project-id

# Application Settings
APP_ENV=development

# Logging Configuration
# LOG_LEVEL controls the verbosity of logs
# - DEBUG: Most verbose, shows all internal details, API calls, timing info
# - INFO: Standard logging, shows important events and workflow progress
# - WARNING: Only warnings and errors
# - ERROR: Only errors
# Recommended: DEBUG for development, INFO for production
LOG_LEVEL=DEBUG

# DEBUG mode enables additional debugging features:
# - Shows file names, line numbers, and function names in logs
# - Displays local variables in stack traces
# - Enables detailed HTTP request/response logging
# - Shows third-party library logs (httpx, google APIs)
# Recommended: true for development, false for production
DEBUG=true

# API Settings
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Cache Settings
CACHE_TTL_SECONDS=3600
USE_CACHE=true

# Output Paths
OUTPUT_DIR=outputs
TEMPLATE_DIR=templates

# Rate Limiting
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD_SECONDS=60
